<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="KeyStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">keyClicked</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="KeyStyle.Operation">
        <item name="android:background">@drawable/button_selector_operation</item>
    </style>
    <style name="KeyStyle.Special">
        <item name="android:background">@drawable/button_selector_special</item>
    </style>

    <style name="DisplayStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/display_color</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">50sp</item>
    </style>

</resources>
